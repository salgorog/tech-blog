<section>
  <h2>Welcome {{post.user.username}} to your Dashboard</h2>

  <form class="new-post-form">
    <div>
        <h3>Make a new post</h3>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-text">Post Content</label>
      <textarea id="post-text" name="post-text"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>
{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{>post-info post}}
            <a href='/dashboard/edit/{{post.id}}' class="edit-post">Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}
<script src="/javascript/add-post.js"></script>